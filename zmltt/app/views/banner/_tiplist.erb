<div class="bottomLinks">
  <table cellpadding="0" cellspacing="0">
    <tr>
      <% if logged_in? %> <td class="margin"></td>
        <td><%= link_to '+', {:controller => 'banner', :action => 'showall', :id => 'tip', :do =>'all'}%>
        </td><%end%>
      <% tip.map do |elem| %>
        <% if not elem == '3x6(призмавижн)' and not elem == 'Перетяжки' and not elem == 'Экраны' %>
          <td class="margin"></td>
          <td><span id="tip_div_<%=elem%>"><!--<%= elem %>--><%= showtip(elem) %></span></td>
        <%end%>
        <% if elem == 'Перетяжки' %>
          <td><span id="tip_div_<%=elem%>" class="first"><!--<%= elem %>--><%= showtip(elem) %></span></td>
        <%end%>
        <% if elem == 'Экраны' %>
          <td><span id="tip_div_<%=elem%>" class="last"><!--<%= elem %>--><%= showtip(elem) %></span></td>
        <%end%>
      <%end%>
      <% if logged_in? %>
        <td><%= link_to '-', {:controller => 'banner', :action => 'showall', :id => 'tip', :do =>'notall'}%></td>
      <%end%>
      <td  class="last">&nbsp;</td>
    </tr>
  </table>
</div>   